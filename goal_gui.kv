<GoalScreen>
    name: "goal"

    ready_button: ready_button
    confirm_button: confirm_button
    system_status: system_status
    FloatLayout:
        cols:2

        FloatLayout:
            Label:
                text:"Start number:"
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint: {"x":0.01, "top":0.9}
                size_hint: 0.5, 0.15
            Label:
                text: str(root.start_number)
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint: {"x": 0.6 , "top":0.9}
                size_hint: 0.5, 0.15
            Label:
                text: "System Status:"
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint: {"x": 0.01 , "top":0.7}
                size_hint: 0.5, 0.15
                halign:"left"
            Label:
                id: system_status
                text: "IDLE"
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint: {"x": 0.5 , "top":0.7}
                size_hint: 0.4, 0.15
                color: (0, 0, 0)  # text color Black
                canvas.before:
                    Color:
                        rgb: (1, 1, 0)
                    Rectangle:
                        size: self.size
                        pos: self.pos
            Label:
                text:"Current time:"
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint: {"x":0.01, "top":0.5}
                size_hint: 0.5, 0.15
            Label:
                text: str(root.current_time)
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint: {"x": 0.6 , "top":0.5}
                size_hint: 0.5, 0.15
            Label:
                text:"Stopped at:"
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint: {"x":0.01, "top":0.3}
                size_hint: 0.5, 0.15
            Label:
                text: str(root.duration_time)
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint: {"x": 0.6 , "top":0.3}
                size_hint: 0.5, 0.15
            Button:
                id: ready_button
                pos_hint:{"x":0.05,"top":0.15}
                size_hint: 0.4, 0.1
                font_size: (root.width**2 + root.height**2) / 14**4
                text: "Ready for next Race"
                on_release: root.set_ready()
            Button:
                id: confirm_button
                pos_hint:{"x":0.5,"top":0.15}
                size_hint: 0.4, 0.1
                font_size: (root.width**2 + root.height**2) / 14**4
                text: "Confirm race time"
                on_release: root.confirm_time()
                disabled: True

